        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Nome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nome)
            @Html.ValidationMessageFor(model => model.Nome)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Descricao)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Descricao)
            @Html.ValidationMessageFor(model => model.Descricao)
        </div>


        <div class="editor-label">
            @Html.LabelFor(model => model.PrecoPadrao)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PrecoPadrao)
            @Html.ValidationMessageFor(model => model.PrecoPadrao)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MesesDuracao)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MesesDuracao)
