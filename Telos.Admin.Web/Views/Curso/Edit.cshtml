@model  Telos.Admin.Web.Models.CursoModel

@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Curso</legend>

        @Html.HiddenFor(model => model.CursoCode)
        <div class="editor-label">
            @Html.LabelFor(model => model.CursoCode)
        </div>
        <div class="editor-field">
            @Html.DisplayFor(model => model.CursoCode)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Nome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nome)
            @Html.ValidationMessageFor(model => model.Nome)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Descricao)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Descricao)
            @Html.ValidationMessageFor(model => model.Descricao)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PrecoPadrao)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PrecoPadrao)
            @Html.ValidationMessageFor(model => model.PrecoPadrao)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MesesDuracao)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MesesDuracao)
            @Html.ValidationMessageFor(model => model.MesesDuracao)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ModifiedDate)
        </div>
        <div class="editor-field">
            @Html.DisplayFor(model => model.ModifiedDate)
        </div>

        <br />
        <input type="submit" value="Salvar" />
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar para a Lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
