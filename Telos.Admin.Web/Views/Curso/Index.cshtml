@model IEnumerable< Telos.Admin.Web.Models.CursoModel>

@{
    ViewBag.Title = "Index";
    var grid = new WebGrid(Model);
}

<h2>Curso</h2>

<p>
    @Html.ActionLink("Criar Novo", "Create", null, new { Class = "btn" })
</p>

@grid.GetHtml(tableStyle: "table table-striped table-bordered table-condensed", 
              columns: grid.Columns( 
                grid.Column("CursoCode", "Código - Curso", format: item => @Html.ActionLink(item.CursoCode as string, "Details", new { Id = item.CursoCode })),
                grid.Column("Nome"),
                grid.Column("PrecoPadrao"),
                grid.Column("MesesDuracao"),
                grid.Column("ModifiedDate","Data de Modificação", format: item => item.ModifiedDate.ToShortDateString()),
                grid.Column(null, "", format: item => @Html.ActionLink("Apagar", "Delete", new { Id = item.CursoCode }, new { Class = "btn btn-danger" })))                    
              )