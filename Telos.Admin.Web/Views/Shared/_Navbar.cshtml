                <span class="icon-bar"></span>
            </button>
            <a class="brand" href="./">Telos - Administração</a>
            <div class="nav-collapse collapse">
                <ul class="nav navbar-nav">
                    <li @(controllerName == "Home" ? "class=active" : "")>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li @(controllerName == "Unidade" ? "class=active" : "")>@Html.ActionLink("Unidade", "Index", "Unidade")</li>
