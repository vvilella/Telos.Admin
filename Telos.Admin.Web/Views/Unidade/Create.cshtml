@model  Telos.Admin.Web.Models.UnidadeModel
@{
    ViewBag.Title = AppResources.Unidade_Create_Title;
}
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>@AppResources.Unidade</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.UnidadeCode)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UnidadeCode)
            @Html.ValidationMessageFor(model => model.UnidadeCode)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Nome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nome)
            @Html.ValidationMessageFor(model => model.Nome)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Endereco)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Endereco)
            @Html.ValidationMessageFor(model => model.Endereco)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Cep)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Cep)
            @Html.ValidationMessageFor(model => model.Cep)
        </div>



        <p>
            <input type="submit" value="Criar"   />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar para listagem", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
