@model IEnumerable< Telos.Admin.Web.Models.UnidadeModel>

@{
    ViewBag.Title = "Index";
    var grid = new WebGrid(Model);
}

<h2>Unidade</h2>

<p>
    @Html.ActionLink("Criar Novo", "Create", null, new { Class = "btn" })
</p>

@grid.GetHtml(tableStyle: "table table-striped table-bordered table-condensed", 
              columns: grid.Columns( 
                grid.Column("UnidadeCode", "Código", format: item => @Html.ActionLink(item.UnidadeCode as string, "Details", new { Id = item.UnidadeCode })),
                grid.Column("Nome"),
                grid.Column("Endereco"),
                grid.Column("Cep"),
                grid.Column("ModifiedDate","Data de Modificação", format: item => item.ModifiedDate.ToShortDateString()),
                grid.Column(null, "", format: item => @Html.ActionLink("Apagar", "Delete", new { Id = item.UnidadeCode }, new { Class = "btn btn-danger" })))                    
              )